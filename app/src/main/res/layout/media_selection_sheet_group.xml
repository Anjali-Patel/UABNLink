<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_btn_add_photo_camera"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_photo_24dp"
                android:gravity="start|center_vertical"
                android:text="Photo"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@drawable/media_bg_stroke"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_btn_add_video"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_video_24dp"
                android:background="@drawable/media_bg_stroke"
                android:gravity="start|center_vertical"
                android:text="Video"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_url"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_link_24dp"
                android:gravity="start|center_vertical"
                android:text="URL"
                android:textStyle="bold"
                android:background="@drawable/media_bg_stroke"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_btn_add_document"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/media_bg_stroke"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_document_24dp"
                android:gravity="start|center_vertical"
                android:text="Document"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>