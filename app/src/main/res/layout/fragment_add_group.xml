<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/descriptionlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="50dp"
                        android:paddingTop="10dp"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/Heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/yellow_bg"
                            android:text="Add your Group Detail"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <EditText
                                android:id="@+id/groupname"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Group Name*"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:gravity="start"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"/>

                            <EditText
                                android:id="@+id/groupdesc"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:hint="Description*"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="start"
                                android:textSize="16sp"
                                android:background="@drawable/media_bg_stroke"
                                android:maxLines="10"/>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"
                                android:layout_gravity="center">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/group_type"
                                    android:popupBackground="@color/primaryTextColor"
                                    android:background="@null"/>

                                <TextView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/dropdown" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"
                                android:layout_gravity="center">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/group_country"
                                    android:popupBackground="@color/primaryTextColor"
                                    android:background="@null"/>

                                <TextView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/dropdown" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"
                                android:layout_gravity="center">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/group_state"
                                    android:popupBackground="@color/primaryTextColor"
                                    android:background="@null"/>

                                <TextView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/dropdown" />

                            </RelativeLayout>

                            <EditText
                                android:id="@+id/city"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="City"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:gravity="start"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"/>

                            <EditText
                                android:id="@+id/zip"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Zip Code"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:gravity="start"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"/>

                            <EditText
                                android:id="@+id/website"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Website"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:gravity="start"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"
                                android:layout_gravity="center">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/access_type"
                                    android:popupBackground="@color/primaryTextColor"
                                    android:background="@null"/>

                                <TextView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/dropdown" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="Options"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/check_photo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Allow Audio"
                                    android:layout_weight="1"/>
                                <CheckBox
                                    android:id="@+id/check_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Allow Comments "
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/check_doc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Allow Documents"
                                    android:layout_weight="1"/>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/embedded_video"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:hint="Embedded Video"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="start"
                                android:textSize="16sp"
                                android:background="@drawable/media_bg_stroke"
                                android:maxLines="10"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"
                                android:layout_gravity="center">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/group_status"
                                    android:popupBackground="@color/primaryTextColor"
                                    android:background="@null"/>

                                <TextView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/dropdown" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:text="Upload Picture"/>
                            <TextView
                                android:id="@+id/SelectPicture"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:text=" Picture"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/media_bg_stroke"
                                android:drawableLeft="@drawable/ic_photo_24dp"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/Images_listview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/l_add_photo"
                                android:background="@android:color/transparent"
                                android:scrollbars="horizontal"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/SelectBanner"
                                    android:layout_width="150dp"
                                    android:layout_height="30dp"
                                    android:text="Upload Banner"
                                    android:textSize="16sp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/media_bg_stroke"
                                    android:drawableLeft="@drawable/ic_photo_24dp"/>


                                <ImageView
                                    android:id="@+id/banner_image"
                                    android:layout_width="100dp"
                                    android:layout_height="60dp"
                                    android:scaleType="fitXY"
                                    android:background="@android:color/transparent"
                                    android:scrollbars="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:visibility="gone"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/banner_listview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/l_add_photo"
                                android:background="@android:color/transparent"
                                android:scrollbars="horizontal"
                                android:layout_marginBottom="10dp"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal" />
                            <Button
                                android:id="@+id/SaveButton"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:text="Save"
                                android:textColor="@color/primaryTextColor"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_background"/>

                            <Button
                                android:id="@+id/UpdateButton"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:text="Update"
                                android:textColor="@color/primaryTextColor"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:background="@drawable/btn_background"/>


                        </LinearLayout>
                    </LinearLayout>


                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:id="@+id/progess_load" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>