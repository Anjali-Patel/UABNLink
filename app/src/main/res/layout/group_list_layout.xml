<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/border_stroke">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/groupAdapter"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/GroupImage"
                    android:src="@drawable/noimage"
                    android:layout_width="fill_parent"
                    android:layout_height="175dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                                            <LinearLayout
                                                android:id="@+id/editGroupLinear"
                                                android:layout_weight="2"
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:visibility="gone"
                                                android:gravity="end">

                                                <ImageView
                                                    android:id="@+id/edit"
                                                    android:layout_width="25dp"
                                                    android:src="@drawable/ic_edit_black_24dp"
                                                    android:layout_height="25dp"
                                                    android:layout_marginRight="10dp"/>
                                                <ImageView
                                                    android:id="@+id/delete"
                                                    android:src="@drawable/ic_delete_black_24dp"
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp" />

                                            </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="17sp"
                    android:id="@+id/Title"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"/>
                <!--                    <LinearLayout-->

                <!--                        android:gravity="end"-->
                <!--                        android:layout_marginEnd="10dp"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content">-->
               <!-- <ImageView
                    android:id="@+id/share"
                    android:src="@drawable/ic_share_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>-->
                <!--                    </LinearLayout>-->
            </RelativeLayout>
            <View
                android:background="#d3d3d3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:text="Type :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textAllCaps="false"
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:text=" Date :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="100dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:text="By :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:text="anbxhbs"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:id="@+id/by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:text=" Comments :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/comment"
                        android:layout_marginLeft="7dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginEnd="100dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:text="View :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:id="@+id/views"
                        android:text="absc"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_background"
                        android:text="Comments"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/CommentButton"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:textAllCaps="false"/>
                    <ImageView
                        android:id="@+id/JoinGroup"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/join_group"
                        android:layout_alignParentLeft="true"/>

                    <ImageView
                        android:id="@+id/LeaveButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/leave_group"
                        android:layout_alignParentLeft="true"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/LikePost"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_like"
                        android:layout_alignParentLeft="true"/>

                    <ImageView
                        android:id="@+id/DisLikePost"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dislike"
                        android:visibility="gone"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/PostComments"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_comment"
                        android:layout_alignParentLeft="true"/>

                    <ImageView
                        android:id="@+id/Share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share_24dp"
                        android:layout_alignParentLeft="true"/>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>



